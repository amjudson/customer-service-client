{
  "extends": "next/core-web-vitals",
  "rules": {
    "react-hooks/exhaustive-deps": 0,
    "semi": [
      "warn",
      "never",
      {
        "beforeStatementContinuationChars": "any"
      }
    ],
    "jsx-quotes": [
      "warn",
      "prefer-single"
    ],
    "quotes": [
      "warn",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      "warn",
      "last"
    ],
    "object-curly-spacing": [
      "warn",
      "never"
    ],
    "max-len": [
      "warn",
      {
        "code": 115,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreRegExpLiterals": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
